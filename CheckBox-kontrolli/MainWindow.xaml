<Window x:Class="CheckBox_kontrolli.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CheckBox_kontrolli"
        mc:Ignorable="d"
        Title="Shopping List" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="48*"/>
            <ColumnDefinition Width="83*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.ColumnSpan="2">
            <CheckBox x:Name="chkMilk" Margin="10" Content="Milk"/>
            <CheckBox x:Name="chkButter" Margin="10" Content="Butter" />
            <CheckBox x:Name="chkBeer" Margin="10" Content="Beeer" />
            <CheckBox x:Name="chkChicken" Margin="10" Content="Chicken" />
            <CheckBox x:Name="chkLemonade" Margin="10" Content="Lemonade" />
            <Button x:Name="btnBuy" Margin="10" Content="Buy" Width="40" HorizontalAlignment="Left" Click="btnBuy_Click"/>
            <TextBlock x:Name="txbListHeader" Text="Shopping List" Margin="10"/>
            <TextBox x:Name="txtList" Margin="10" Width="200" Height="50" HorizontalAlignment="Left" TextWrapping="WrapWithOverflow"/>
        </StackPanel>
    </Grid>
</Window>
